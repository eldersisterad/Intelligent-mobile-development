<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_fed952"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp">

        <Button
            android:id="@+id/button_back"
            android:layout_width="26dp"
            android:layout_height="39dp"
            android:layout_centerVertical="true"
            android:background="@drawable/mm_title_back_btn" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_photo_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/default_user_avatar" />

        <TextView
            android:id="@+id/username_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="tyt114"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_view"
            android:background="@drawable/bg_message_tip"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="+ 关注"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/xiang_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/color_5a79b7" />

</LinearLayout>