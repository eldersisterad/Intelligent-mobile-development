<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/logined_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_photo_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:src="@drawable/default_user_avatar" />

            <RelativeLayout
                android:id="@+id/userinfo_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/user_photo_view">

                <TextView
                    android:id="@+id/username_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="tyt114"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tick_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/username_view"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/classroom_bg_yes"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="我的关注"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />


            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#cccccc" />

        <TextView
            android:id="@+id/video_setting_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/arrow_right"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:text="个人信息设置"
            android:textColor="#333333"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="#cdcdcd" />

        <TextView
            android:id="@+id/add_class_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/arrow_right"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:text="添加教室"
            android:textColor="#333333"
            android:textSize="15sp"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="#cdcdcd" />

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/record_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/title_layout"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        app:tabGravity="center"
        app:tabIndicatorColor="@android:color/holo_red_dark"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@android:color/holo_red_dark"
        app:tabTextColor="#7D7D7D" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/my_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/login_out"
        android:layout_below="@+id/record_tabs" />

    <Button
        android:id="@+id/login_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#E8B90C"
        android:text="退出登录"
        android:textColor="@android:color/white"
        android:textSize="16dp" />

</RelativeLayout>